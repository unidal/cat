<plexus>
	<components>
		<component>
			<role>org.unidal.web.mvc.Validator</role>
			<role-hint>layout</role-hint>
			<implementation>org.unidal.cat.view.LayoutInterceptor</implementation>
		</component>
		<component>
			<role>org.unidal.initialization.Module</role>
			<role-hint>cat-home</role-hint>
			<implementation>org.unidal.cat.CatWebModule</implementation>
		</component>
		<component>
			<role>org.unidal.initialization.ModuleManager</role>
			<implementation>org.unidal.initialization.DefaultModuleManager</implementation>
			<configuration>
				<topLevelModules>cat-home</topLevelModules>
			</configuration>
		</component>
		<component>
			<role>org.unidal.dal.jdbc.datasource.JdbcDataSourceDescriptorManager</role>
			<implementation>org.unidal.dal.jdbc.datasource.JdbcDataSourceDescriptorManager</implementation>
			<configuration>
				<datasourceFile>/data/appdatas/cat/datasources.xml</datasourceFile>
			</configuration>
		</component>
		<component>
			<role>org.unidal.web.mvc.model.ModuleRegistry</role>
			<implementation>org.unidal.web.mvc.model.ModuleRegistry</implementation>
			<configuration>
				<defaultModule>org.unidal.cat.report.ReportModule</defaultModule>
			</configuration>
		</component>
		<component>
			<role>org.unidal.web.mvc.Module</role>
			<role-hint>org.unidal.cat.report.ReportModule</role-hint>
			<implementation>org.unidal.cat.report.ReportModule</implementation>
		</component>
		<component>
			<role>org.unidal.cat.report.home.Handler</role>
			<implementation>org.unidal.cat.report.home.Handler</implementation>
			<requirements>
				<requirement>
					<role>org.unidal.cat.report.home.JspViewer</role>
				</requirement>
			</requirements>
		</component>
		<component>
			<role>org.unidal.cat.report.home.JspViewer</role>
			<implementation>org.unidal.cat.report.home.JspViewer</implementation>
			<requirements>
				<requirement>
					<role>org.unidal.web.mvc.view.model.ModelHandler</role>
				</requirement>
			</requirements>
		</component>
	</components>
</plexus>
